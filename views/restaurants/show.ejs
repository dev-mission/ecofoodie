<%- contentFor('title') %><%= record.name %>
<%- contentFor('head') %>
<%- contentFor('body') %>
<div class= "box">
  <div class="d-block p-2"></div>
  <div class="mousepointer"></div>
  <img class="restaurants_logo" src="<%= assetUrl(record.logo) %>" alt="" align = "middle" hspace="12">
  <span class =" boldtext"><%= record.name %> </span>
  <div class = "address" align= "middle" hspace="-100%" ><%= record.address %></div>
  <div class= "ratings">
    <fieldset disabled>
      <label for="<%= record.id %>-star1" ></label>
      <input type="radio" name="<%= record.id %>-star" id="<%= record.id %>-star1" value="1" <%= record.rating==1 ? 'checked' : '' %>>
      <label for="<%= record.id %>-star2" ></label>
      <input type="radio" name="<%= record.id %>-star" id="<%= record.id %>-star2" value="2" <%= record.rating==2 ? 'checked' : '' %>>
      <label for="<%= record.id %>-star3" ></label>
      <input type="radio" name="<%= record.id %>-star" id="<%= record.id %>-star3" value="3" <%= record.rating==3 ? 'checked' : '' %>>
      <label for="<%= record.id %>-star4" ></label>
      <input type="radio" name="<%= record.id %>-star" id="<%= record.id %>-star4" value="4" <%= record.rating==4 ? 'checked' : '' %>>
      <label for="<%= record.id %>-star5" ></label>
      <input type="radio" name="<%= record.id %>-star" id="<%= record.id %>-star5" value="5" <%= record.rating==5 ? 'checked' : '' %>>
    </fieldset>
  </div>
</div>
<ul>
  <% for (let category of categories) { %>
  <li><a href="/restaurants/<%= record.id %>/categories/<%= category.id %>/items"><%= category.type %></a></li>
  <% } %>
</ul>
<p><a href="/restaurants/<%= record.id %>/items/new">New Item</a></p>
